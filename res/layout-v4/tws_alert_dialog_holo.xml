<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tws="http://schemas.android.com/apk/res-auto"
    android:id="@id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dip"
    android:layout_marginRight="16dip"
    android:background="@color/tws_dialog_holo_bg"
    android:minWidth="300dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:id="@id/titleDividerTop"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="?android:attr/listDividerAlertDialog"
            android:visibility="gone" />

        <LinearLayout
            android:id="@id/title_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dip"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@id/titleLinear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/tws_listview_item_padding_side_left"
                android:layout_marginRight="@dimen/tws_listview_item_padding_side_right"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@id/icon"
                    android:layout_width="@dimen/tws_listview_icon_size"
                    android:layout_height="@dimen/tws_listview_icon_size"
                    android:paddingTop="10dip"
                    android:src="@null" />

                <TextView
                    android:id="@id/alertTitle"
                    style="?attr/windowTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="false" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/titleSpacer"
                android:layout_width="match_parent"
                android:layout_height="16dip"
                android:orientation="horizontal"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:id="@id/titleDivider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="?android:attr/listDividerAlertDialog"
            android:visibility="gone" />
        <!-- If the client uses a customTitle, it will be added here. -->
    </LinearLayout>

    <LinearLayout
        android:id="@id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <com.tencent.tws.assistant.widget.TwsScrollView
            android:id="@id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="true"
            tws:maxHeight="@dimen/dialog_content_maxheight" >

            <LinearLayout
                android:id="@id/messageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tws_listview_item_padding_side_left"
                android:layout_marginRight="@dimen/tws_listview_item_padding_side_right"
                android:layout_marginTop="0dip"
                android:gravity="center_vertical|left"
                android:minHeight="60dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/msgSpacer"
                    android:layout_width="1dip"
                    android:layout_height="16dip"
                    android:orientation="horizontal"
                    android:visibility="gone" />

                <TextView
                    android:id="@id/message"
                    style="?attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3dip"
                    android:paddingBottom="20dip"
                    android:paddingTop="16dip"
                    android:textSize="@dimen/tws_Medium_TextSize" />
            </LinearLayout>
        </com.tencent.tws.assistant.widget.TwsScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@id/customPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:minHeight="60dip"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@id/custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip" />
    </LinearLayout>
    
    <View
        android:id="@id/bottomDividerTop"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/tws_dialog_button_divider" />

    <LinearLayout
        android:id="@id/dialog_bottom_buttons_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@id/buttonPanel"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:measureWithLargestChild="true"
        android:minHeight="48dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@id/leftSpacer"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:visibility="gone" />

        <Button
            android:id="@id/button2"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:maxLines="2"
            android:minHeight="60dip" />

        <Button
            android:id="@id/button3"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:maxLines="2"
            android:minHeight="60dip" />

        <Button
            android:id="@id/button1"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:maxLines="2"
            android:minHeight="60dip" />

        <LinearLayout
            android:id="@id/rightSpacer"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>