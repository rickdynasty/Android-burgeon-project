<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners
                android:bottomLeftRadius="@dimen/tws_button_radius"
                android:bottomRightRadius="@dimen/tws_button_radius"
                android:topLeftRadius="@dimen/tws_button_radius"
                android:topRightRadius="@dimen/tws_button_radius" />

            <gradient
                android:angle="135"
                android:endColor="#33FFFFFF"
                android:startColor="#66FFFFFF" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:shape="rectangle"
        android:top="2dp">
        <shape>
            <solid android:color="#262626" />

            <corners
                android:bottomLeftRadius="@dimen/tws_button_radius"
                android:bottomRightRadius="@dimen/tws_button_radius"
                android:topLeftRadius="@dimen/tws_button_radius"
                android:topRightRadius="@dimen/tws_button_radius" />
        </shape>
    </item>

</layer-list>